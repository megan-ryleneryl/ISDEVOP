<div class="page-wrap">
  <div class="register-wrap">
    <div class="registration-form">
      <img class="text-logo" src="/img/UniRide text.svg" alt="logo" />
      <div class="form-wrap">
        <h1 class="bold">Register</h1>
        <form action="/auth/new" method="POST" enctype="multipart/form-data">
          <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
          </div>
          <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
          </div>
          <div>
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" required>
          </div>
          <div>
            <label for="universityID">University:</label>
            <select id="universityID" name="universityID" required>
              <option value="" disabled selected>Select your university</option>
              <option value="10001">De La Salle University</option>
            </select>
          </div>  
          <div>
            <label for="enrollmentProof">Enrollment Proof</label>
            <input type="file" id="enrollmentProof" accept="image/*" name="enrollmentProof" required>
          </div>
          <div>
            <label for="profilePicture">Profile Picture URL:</label>
            <input type="file" id="profilePicture" accept="image/*" name="profilePicture"/>
          </div>
          <button type="submit" class="form-button">Register</button>
        </form>
        <div class="loginlink"><p>Already have an account?</p><a
            href="/login"
          >Login</a></div>
      </div>
    </div>
  </div>
</div>
